/* WXSS 样式 */
.camera-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 600rpx;
  height: 600rpx;
  background-color: #f8f8f8;
  border-radius: 32rpx;
  transition: all 0.3s ease;
  margin: 40rpx auto;
}

/* 点击反馈效果 */
.camera-btn:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.btn-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
}

.btn-text {
  font-size: 60rpx;
  color: #333;
}

.center-wrapper {
  display: flex;
  justify-content: center;  /* 横向居中 */
  margin-top: 160rpx;
}

.warning-text {
  background-color: #ffecec;
  color: #d9534f;
  font-size: 80rpx;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  text-align: center;
}
