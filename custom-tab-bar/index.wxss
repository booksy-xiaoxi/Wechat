
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80px;
  background: #fff;
  display: flex;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1px solid rgba(0, 0, 0, 0.1); /* 或使用 tab-bar-border */
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: row; /* 图标和文字横向排列 */
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tab-text {
  font-size: 80rpx;
  color: #7A7E83;
}

.speak-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.tab-text-active {
  color: #3cc51f;
}
